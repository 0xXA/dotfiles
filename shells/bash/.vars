#!/usr/bin/env bash

shopt -s checkhash
shopt -s checkwinsize
shopt -s cdable_vars
shopt -s autocd
shopt -s cmdhist
shopt -s dirspell
shopt -s extglob
shopt -s hostcomplete
shopt -s nocaseglob
shopt -s nocasematch

alias cls="clear"
alias ls='ls --color'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias lsd='ls -lF'
alias lgo='logout'
alias nano='nano -m'

export EDITOR='vim'
export CC='gcc-8'
export AS='as'
export AR='ar'
export CXX='g++-8'
export LD=ld
export GPG_TTY=$(tty)
